    <!-- 警示标志（黄色） -->
    <model name="warning_sign">
      <static>true</static>
      <pose>0 5 1 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry><box><size>0.1 1 2</size></box></geometry>
